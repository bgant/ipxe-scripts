# Source: https://kinvolk.io/docs/flatcar-container-linux/latest/setup/storage/mounting-storage/#use-attached-storage-for-docker
# Don't wipe so that Longhorn volumes will persist across reboots
storage:
  filesystems:
    - name: localdisk
      mount:
        device: /dev/disk/by-partlabel/DOCKER
        format: ext4
        wipe_filesystem: false
systemd:
  units:
    - name: var-lib-docker.mount
      enable: true
      contents: |
        [Unit]
        Description=Mount as /var/lib/docker
        Before=local-fs.target
        [Mount]
        What=/dev/disk/by-partlabel/DOCKER
        Where=/var/lib/docker
        Type=ext4
        [Install]
        WantedBy=local-fs.target
    - name: docker.service
      dropins:
        - name: 10-wait-docker.conf
          contents: |
            [Unit]
            After=var-lib-docker.mount
            Requires=var-lib-docker.mount
docker:
  flags:
    - --insecure-registry registry.localdomain:5000
